<?php
// ==============================================================================
// ARCHIVO: config/db_connect.php.example
// OBJETIVO: Plantilla de conexión (No contiene credenciales reales).
// INSTRUCCIONES: Copia este archivo como 'db_connect.php' y rellena tus datos.
// ==============================================================================

// 1. DETECTAR ENTORNO
// Determinamos si estamos trabajando en Local (XAMPP) o en el Servidor (Nube).
$es_local = ($_SERVER['SERVER_NAME'] === 'localhost' || $_SERVER['SERVER_NAME'] === '127.0.0.1');

if ($es_local) {
    // === CONFIGURACIÓN LOCAL (XAMPP / MAMP) ===
    $host = 'localhost';
    $user = 'root';      // Usuario por defecto
    $pass = '';          // Contraseña por defecto
    $db   = 'tu_base_de_datos_local';
    
    // Mostramos errores para facilitar el desarrollo en local
    ini_set('display_errors', 1);
    ini_set('display_startup_errors', 1);
    error_reporting(E_ALL);

} else {
    // === CONFIGURACIÓN PRODUCCIÓN (INFINITYFREE) ===
    $host = 'tu_host_infinityfree';
    $user = 'tu_usuario_infinityfree';
    $pass = 'tu_password_infinityfree';
    $db   = 'tu_base_de_datos_nube';
    
    // Ocultamos errores al usuario final por seguridad en producción
    ini_set('display_errors', 0);
    error_reporting(0);
}

// 2. CONECTAR MEDIANTE MYSQLI
$conn = new mysqli($host, $user, $pass, $db);

// 3. VERIFICAR LA CONEXIÓN
if ($conn->connect_error) {
    // En caso de fallo, devolvemos un error en formato JSON
    header('Content-Type: application/json');
    die(json_encode(['success' => false, 'error' => 'Error de conexión: ' . $conn->connect_error]));
}

// 4. CONFIGURAR JUEGO DE CARACTERES
// Vital para que las tildes y las "ñ" se vean correctamente.
$conn->set_charset("utf8mb4");

?>
